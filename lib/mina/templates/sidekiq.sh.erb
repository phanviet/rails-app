#!/bin/bash

### BEGIN INIT INFO
# Provides:          unicorn
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the unicorn web server
# Description:       starts unicorn
### END INIT INFO

# Add to auto-start on server start
# sudo update-rc.d unicorn-<%= app %> defaults
# Remove from auto-start
# sudo update-rc.d -f unicorn-<%= app %> remove

RVM_ENV="ruby-2.1.5@<%= app %>"
APP_NAME="<%= app %>"
APP_PATH="<%= app_path %>"
CONFIG_PATH=<%= sidekiq_config %>
EUSER="<%= user %>"
RAILS_ENV=<%= rails_env %>

RVM="source /usr/local/rvm/environments/$RVM_ENV"
LOG="<%= sidekiq_log %>"
PID="<%= sidekiq_pid %>"
if [ "$2" ]
  then
    INDEX=$2
  else
    INDEX=0
fi
CMD="$RVM && cd $APP_PATH && bundle exec sidekiq"
CMD_OPTS="-d -e $RAILS_ENV -C $CONFIG_PATH -i $INDEX -P $PID -L $LOG"

NAME=`basename $0`
DESC="Sikekiq for $APP_NAME"

case "$1" in
  start)
    echo -n "Starting $DESC: "
    su - $EUSER -c "$CMD $CMD_OPTS"
    echo "$NAME."
  ;;

  stop)
    echo -n "Stopping $DESC: "
    if [ -f $PID ] && [ -e /proc/$(cat $PID) ]
    then
      kill -QUIT `cat $PID`
      echo "$NAME."
    else
      echo "Unable to get $PID file, or process is down"
    fi
  ;;

  restart)
    echo -n "Restarting $DESC: "
    if [ -f $PID ] && [ -e /proc/$(cat $PID) ]
    then
      kill -USR2 `cat $PID`
    else
      su - $EUSER -c "$CMD $CMD_OPTS"
    fi
    echo "$NAME."
  ;;

  *)
    echo "Usage: $NAME {start|stop|restart}" >&2
    exit 1
  ;;
esac

exit 0
